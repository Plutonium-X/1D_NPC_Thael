IF
	AttackedBy([ANYONE],DEFAULT)
        Global("SindelAtacada","LOCALS",0)
THEN
	RESPONSE #100
		Enemy()
		ActionOverride("Buch",Enemy()) 
		ActionOverride("Buss",Enemy()) 
		ActionOverride("Buba",Enemy())
                SetGlobal("SindelAtacada","LOCALS",1)

END

