IF
	HPPercentLT(Myself,20)
	!GlobalTimerNotExpired("DrankPotionTimer","LOCALS")
	HasItem("POTN55",Myself) // Poción de curación extra
THEN
	RESPONSE #100
		SetGlobalTimer("DrankPotionTimer","LOCALS",6)
		DisplayStringHead(Myself,46150) // se bebe una poción
		UseItem("POTN55",Myself) // Poción de curación extra
END

IF
	See(NearestEnemyOf(Myself))
	Allegiance(Myself,ENEMY)
	HPPercentLT(Myself,30)
	//Delay(5)
	!GlobalTimerNotExpired("DrankPotionTimer","LOCALS")
	HasItem("POTN10",Myself) // Poción de invisibilidad
	!StateCheck(Myself,STATE_INVISIBLE)
	!StateCheck(Myself,STATE_IMPROVEDINVISIBILITY)
THEN
	RESPONSE #100
		SetGlobalTimer("DrankPotionTimer","LOCALS",6)
		DisplayStringHead(Myself,46150) // se bebe una poción
		UseItem("POTN10",Myself) // Poción de invisibilidad
                Attack(NearestEnemyOf(Myself))
END

IF
	See(NearestEnemyOf(Myself))
	Range(NearestEnemyOf(Myself),7)
THEN
	RESPONSE #100
		EquipMostDamagingMelee()
		AttackReevaluate(NearestEnemyOf(Myself),45)
END


